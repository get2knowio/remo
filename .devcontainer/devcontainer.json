{
  "name": "get2know.io devcontainer",
  "image": "ghcr.io/get2knowio/devcontainer:latest",
  "remoteUser": "vscode",
  "features": {},
  "remoteEnv": {
    "GH_PAGER": ""
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  },
  "workspaceFolder": "/workspaces/remote-coding",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/remote-coding,type=bind,consistency=cached",
  "initializeCommand": "docker pull ghcr.io/get2knowio/devcontainer:latest",
  "mounts": [
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ]
}
