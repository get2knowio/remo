// Minimal outer zellij config - session wrapper only
// All keybindings pass through to inner shell/zellij except Ctrl+d to detach

keybinds clear-defaults=true {
    // Only binding: detach to return to project menu
    shared {
        bind "Ctrl d" { Detach; }
    }
}

// Use minimal layout with no tab-bar or status-bar
default_layout "minimal"

// Hide pane frames for clean look
pane_frames false

// Disable startup tips and release notes
show_startup_tips false
show_release_notes false
