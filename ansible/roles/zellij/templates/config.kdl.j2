keybinds clear-defaults=true {
  // --- Outer Zellij handles tab management only ---

  normal {
    bind "Ctrl t" { NewTab; }
    bind "Ctrl Tab" { GoToNextTab; }
    bind "Ctrl Shift Tab" { GoToPreviousTab; }

    // You probably want close-tab as well:
    bind "Ctrl w" { CloseTab; }

    // Optional: detach zellij
    bind "Ctrl d" { Detach; }
  }

  // Allow basic UI control
  locked {
    bind "Ctrl t" { SwitchToMode "Normal"; }
  }
}
